@model IEnumerable<Studentenbeheer.Models.Inschrijvingen>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
@if (User.Identity.IsAuthenticated)
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
            }
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Module)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InschrijvingsDatum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AfgelegdOp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Resultaat)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Module.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Achternaam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InschrijvingsDatum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AfgelegdOp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Resultaat)
            </td>
            @if (User.IsInRole("Admin"))
            {
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            }
        </tr>
}
    </tbody>
</table>
